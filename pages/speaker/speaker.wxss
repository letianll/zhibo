/* pages/speaker/speaker.wxss */
.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
} 
.swiper-tab{ 
  width: 100%; 
  border-bottom: 2rpx solid #eeeeee; 
  text-align: center; 
  line-height: 80rpx;
  position: fixed; top:0px; z-index: 10000; background-color: #fff; height: 80rpx;} 
.swiper-tab-item{ font-size: 30rpx; 
  display: inline-block; 
  width: 33%; 
  color: #666666; 
} 
.on{ color: #ff9933; 
  border-bottom: 5rpx solid #ff9933;} 

.swiper-box{ display: block; height: 80%; width: 100%; overflow: hidden; margin-top: 14%; } 

.D-minheight {
        min-height: 80px;
}
.sr_view{
  width:100%;
   overflow-x: hidden;
   overflow-y:auto; 
   margin-top:5px; 
   display: flex;
   align-items: center;
}
.active_view{
   width:90%; height: 470rpx;  margin-left: 5%;
   margin-top: 3%; padding-top: 30rpx;
}
.active_img{
width:100%;height:350rpx; 

border-radius: 10px;
background-repeat:round;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.active_img button{
   background-color:#ff9933; font-size: 12px; color: #fff; border-radius: 8px;
   position:relative; left:-40%;  top:-20rpx; height: 50rpx; line-height: 50rpx; width:150rpx;
}  
.cafe_view{
  position:relative;left:90%; top:-15rpx; color: #fff; font-size:14px; 
}
.title_view{
   font-size: 16px;margin-top: 10rpx; 
}
.desc_view{
   font-size: 13px; color: #aaaaaa;margin-top: 10rpx;
}
.other_view{
  width:100%; height:50rpx; margin-top: 10rpx;
} 
.type_view{
 font-size: 12px; border: 1px solid #ff9933; color:#ff9933; width: 150rpx;
  text-align: center;float: left;
}
.price_view{
  font-size: 12px; float: right; color: #888888; 
}
.price_view text{
  color: #ff9933;
}

.anchor_view{
  width:90%; margin-left: 5%; padding-top:25rpx; min-height: 300rpx; height: auto;
}
.head_img{
   width:100%; height:300rpx; background-size: 100% 100%;background-repeat: no-repeat;
  border-radius: 15rpx; border: 1px solid #aaaaaa; 
}
.anchor_txt{
   font-size: 14px; color: #666666; margin-left: 30rpx; line-height: 50rpx;
}
.anchor_txt image{
  width:35rpx; height: 35rpx; margin-left: 15rpx; margin-right: 10rpx;
}
