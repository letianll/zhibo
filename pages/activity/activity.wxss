page{
  background-color: #ffffff;
}
.Act_homepage{
  display: flex;
  flex-direction: column;
  height:auto;
  width: 100%;
  background-color: #ffffff;
  
  margin-bottom: 20rpx;
  padding-bottom: 10px;
  overflow:hidden;
}
.Act_bottom{
  display: flex;
  flex-direction: column;
  height:100rpx;
  width: 92%;
  padding: 4%;
  background-color: rgb(247,202,153);
  line-height: 15rpx;
}
.Act_bottom text{
  line-height: 24rpx;
  font-size: 24rpx;
}
.input_txt{
   width: 90%;
  margin-left:5%;
  color: #000000;
  height: 50rpx;
  font-size: 35rpx;
  margin-top:25rpx;
}
.picker{
  width: 88%;
  margin-left:5%;
  color: #666666;
  height: 70rpx;
  border: 1px solid #bebebe;
  border-radius: 10rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: "Microsoft Yahei";
  font-size: 30rpx;
  font-weight:500;
  padding-left: 2%;
}
.money{
  width: 88%;
  margin-left:5%;
  padding-left: 2%;
  color: #666666;
  height: 70rpx;
  border: 1px solid #bebebe;
  border-radius: 10rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: "Microsoft Yahei";
  font-size: 30rpx;
  
}
.money>input{
  font-size: 30rpx;
   width:100%;
  
}
.money>textarea{
  width:100%;
  height: 200rpx;
}
.datetime{
  
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: "Microsoft Yahei";
  font-size: 30rpx;
  font-weight:500;
}
.picker>text{
  color: #666666;
}

.deep_button{
  display: flex;
  flex-direction: column;
  height:200rpx;
  width: 100%;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.deep_button>button{
  height: 100rpx;
  width: 70%;
  background-color:  #ff9933;
  color: #ffffff;
  margin-top: 20rpx;
  font-size: 40rpx;
}