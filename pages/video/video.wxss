/* pages/play/play.wxss */
.liveplay{
  width:95%;height:210px;position:fixed; top:0px; display:flex; margin-left:2.5%; background-color: #fff;
  z-index:10000;
}
.bottom_box
{
  position: relative;
  width: 30px; 
  height: 50px; 
  margin-left:calc(100% / 14 - 15px); 
  margin-right:calc(100% / 14 - 15px);
  display:inline-block;
}

.bottom_button
{
  display:inline-block;
  position: absolute;
  width: 30px; 
  height: 30px; 
}

.bottom_button :active
{
  opacity: 0.55
}

.bottom_text
{
  position: absolute;
  display:inline-block;
  color: #ffffff;
  width: 100%;
  font-size:10px;
  bottom: 0;
  text-align: center;
}
.play_ct{

  width:100%; height: 40px;bottom:50px; padding-top: 7px; position: fixed; top:210px;
  background-color: #cccccc;z-index: 10000;
}
.play_text{
  width:50%; font-size: 25rpx; line-height: 30px;
}

.center{
    text-align: center;
}
.swiper-tab{ 
  width:100%; 
  border-bottom: 2rpx solid #eeeeee; 
  text-align: center; 
  height: 60rpx;
  line-height: 60rpx;
  background-color: #eeeeee;
  margin-top: 0rpx;
  padding-top: 5rpx;
  border-radius: 0 10px 0 0;} 
.swiper-tab-item{
  font-size: 26rpx; 
  float: left;
  width: 50%; 
  color: #666666; 
   background-color: #eeeeee;
   border-radius: 0 10px 0 0;
} 

.on{ color: #ff9933; background-color: #ffffff;border-bottom: 3rpx solid #ff9933;
  } 
 
.swiper-box{
    display: block; 
